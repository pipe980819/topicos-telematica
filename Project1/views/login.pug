extends layout

block content
  h1 Log in
  form(method='POST', action='/users/login')
    #form-group
      label Username:
      input.form-control(name='username',type='text')
      br
    #form-group
      label Password:
      input.form-control(name='password',type='password')
    br
    button.btn.btn-primary(type='submit') Log in